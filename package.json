{
    "name": "@embedthis/testme",
    "owner": "embedthis",
    "version": "0.8.16",
    "description": "Multi-language test runner for shell, C, JavaScript, TypeScript, Python, and Go tests",
    "author": "Embedthis Software",
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/embedthis/testme.git"
    },
    "homepage": "https://github.com/embedthis/testme/",
    "bugs": {
        "url": "https://github.com/embedthis/testme/issues"
    },
    "main": "src/pkg/testme.js",
    "module": "src/pkg/testme.js",
    "types": "src/pkg/testme.d.ts",
    "type": "module",
    "private": false,
    "exports": {
        ".": {
            "import": "./src/pkg/testme.js",
            "types": "./src/pkg/testme.d.ts"
        }
    },
    "files": [
        "bin/install.sh",
        "bin/install.ps1",
        "bin/install.mjs",
        "bin/postinstall.mjs",
        "bin/check-install.mjs",
        "bin/clean.mjs",
        "bin/update-version.mjs",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.d.ts",
        "!src/modules/js/node_modules",
        "src/modules/c/testme.h",
        "src/modules/es/testme.mod",
        "doc/tm.1",
        "testme.ts",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "start": "bun run src/index.ts",
        "prebuild": "node bin/update-version.mjs",
        "build": "bun build ./testme.ts --compile --outfile dist/tm",
        "postbuild": "cd src/modules/js && bun link && cd ../../../test && bun link testme",
        "build:win": "bun build ./testme.ts --compile --outfile dist/tm.exe",
        "build:unix": "bun build ./testme.ts --compile --outfile dist/tm",
        "clean": "bun bin/clean.mjs",
        "install": "echo 'Installing...'",
        "postinstall": "bun bin/postinstall.mjs",
        "test": "tm test"
    },
    "engines": {
        "node": ">=18.0.0",
        "bun": ">=1.0.0"
    },
    "keywords": [
        "test",
        "testing",
        "test-runner",
        "c",
        "javascript",
        "typescript",
        "python",
        "go",
        "shell",
        "powershell",
        "batch",
        "windows",
        "linux",
        "macos",
        "cross-platform",
        "bun"
    ],
    "dependencies": {
        "glob": "^11.0.3",
        "json5": "^2.2.3"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "bun-types": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
