{
    // Parent config with relative paths and ${CONFIGDIR} variable
    compiler: {
        c: {
            gcc: {
                flags: [
                    '-I../../src',
                    '-L../../dist',
                    '-Wl,-rpath,${CONFIGDIR}/../../dist',
                ],
                libraries: ['testlib'],
            },
            msvc: {
                flags: [
                    '/I../../src',
                    '/LIBPATH:../../dist',
                ],
                libraries: ['testlib.lib'],
            },
        },
    },
    environment: {
        TEST_PATH: '../../dist',
        PATH: '../../dist:${PATH}',
        TEST_CONFIGDIR: '${CONFIGDIR}',
    },
}
